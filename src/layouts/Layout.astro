---
import FacebookIcon from '../components/FacebookIcon.astro';
import LinkedInIcon from '../components/LinkedInIcon.astro';

interface Props {
	title: string;
	description: string;
}

const { description, title } = Astro.props;
---

<!doctype html>
<html lang="fr" class="bg-white">
	<head>
		<meta charset="UTF-8" />
		<title>{title}</title>
		<meta property="og:title" content={title} />
		<meta name="description" content={description} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content="/lea-kormas/logo.webp" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" href="/lea-kormas/logo-wood-2864.webp" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Young+Serif&display=swap" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css2?family=Noto+Serif:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
	</head>
	<body class="text-wood-500 font-body">
		<header class="bg-wood-600 text-white border-b-4 border-wood-300 font-heading px-2 py-3 md:px-8 md:py-4 sticky top-0 z-10 flex flex-col md:flex-row gap-2 justify-between items-center">
			<span class="text-xs md:text-base"><img src="/lea-kormas/logo-white-286.webp" alt="Léa Kormas logo" class="w-6 md:w-8 inline-block mr-4" />Ostéopathe Animalier Savoie - Léa Kormas</span>
			<nav class="flex gap-8 text-sm md:text-base">
				<a href="#accueil" class="hover:text-wood-200">Accueil</a>
				<a href="#prestations" class="hover:text-wood-200">Prestations</a>
				<a href="#actualite" class="hover:text-wood-200">Actualité</a>
				<a href="#contact" class="hover:text-wood-200">Contact</a>
			</nav>
		</header>
		<slot />
	</body>
	<footer class="bg-wood-200 py-8 px-4">
		<section class="max-w-[1020px] w-full m-auto px-12 py-4">
			<h2 class="font-heading text-wood-500 text-xl mb-8">Retrouvez-moi sur les réseaux</h2>
			<div class="flex flex-col md:flex-row md:justify-between gap-x-5">
				<div class="flex flex-col items-start">
					<a href="https://www.chien.com/adresse/osteopathe-masseur-pour-chien/lea-kormas-77685.php" class="font-bold underline hover:text-wood-600">Chien.com</a>
					<a href="https://www.chatsdumonde.com/adresse/osteopathe-masseur-pour-chat/lea-kormas-77684.php" class="font-bold underline hover:text-wood-600">Chats du monde</a>
				</div>
				<div class="flex flex-col items-start">
					<a href="https://www.annuaire-osteopathie-animaux.eu/spip.php?article968" class="font-bold underline hover:text-wood-600">Annuaire d'ostéopathie animale</a>
					<a href="https://www.pagesjaunes.fr/pros/62863575" class="font-bold underline hover:text-wood-600">Pages Jaunes</a>
				</div>
				<div class="flex flex-col items-start">
					<a href="https://www.facebook.com/people/Ost%C3%A9opathe-Animalier-Savoie-L%C3%A9a-Kormas-OA-1132/100087652673371/" class="font-bold underline hover:text-wood-600"><FacebookIcon class="w-4 inline-block mr-2 fill-wood-500" />Facebook</a>
					<a href="https://www.linkedin.com/in/l%C3%A9a-kormas-8b02ba2ab/" class="font-bold underline hover:text-wood-600"><LinkedInIcon class="w-4 inline-block mr-2 fill-wood-500" />LinkedIn</a>
				</div>
			</div>
		</section>
	</footer>
</html>
